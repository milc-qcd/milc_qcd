DIRS = \
   arb_overlap \
   clover_dynamical \
   clover_invert2 \
   ext_src \
   file_utilities \
   gauge_utilities \
   gluon_prop \
   hvy_qpot \
   ks_eigen \
   ks_imp_dyn \
   ks_imp_rhmc \
   ks_imp_utilities \
   ks_measure \
   ks_spectrum \
   pure_gauge \
   schroed_cl_inv \
   schroed_ks_dyn \
   smooth_inst \
   symanzik_sl32 \
   u1_gauge \
   wilson_flow \


all:
	for dir in ${DIRS};\
	do\
	    echo "Testing $$dir"; \
	    cp Makefile $$dir; \
	    cd $$dir; \
	    ${MAKE} -k check > maketest.log 2>&1;\
	    cd ..;\
	done

clean:
	for dir in ${DIRS};\
	do\
	    (cd $$dir; ${MAKE} test_clean;)\
	done

